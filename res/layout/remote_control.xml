<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layRemoteControl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center"
	    android:orientation="vertical" >
	    
	    <LinearLayout
	        android:id="@+id/layBasicControl"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >
	        
		    <View
		        android:layout_width ="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" />
			
			<TableLayout
			    android:id="@+id/tblBasicControl"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
				android:layout_weight="6" >

			    <TableRow
			        android:id="@+id/tableRow1"
			        android:layout_width="wrap_content"
			        android:layout_height="0dp"
			        android:layout_weight="1" >
			        
			        <ImageButton
			            android:id="@+id/btnFwdLeft"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_fwdleft"
			        	android:scaleType="centerInside" />
			
			        <ImageButton
			            android:id="@+id/btnFwd"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_fwd"
			        	android:scaleType="centerInside" />
			
			        <ImageButton
			            android:id="@+id/btnFwdRight"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_fwdright"
			        	android:scaleType="centerInside" />
			
			    </TableRow>
			
			    <TableRow
			        android:id="@+id/tableRow2"
			        android:layout_width="wrap_content"
			        android:layout_height="0dp"
			        android:layout_weight="1" >
			    
			        <ImageButton
			            android:id="@+id/btnLeft"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_left"
			        	android:scaleType="centerInside" />
			
			        <ImageButton
			            android:id="@+id/btnStop"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_stop"
			        	android:scaleType="centerInside" />
			
			        <ImageButton
			            android:id="@+id/btnRight"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_right"
			        	android:scaleType="centerInside" />
			
			    </TableRow>
			
			    <TableRow
			        android:id="@+id/tableRow3"
			        android:layout_width="wrap_content"
			        android:layout_height="0dp"
			        android:layout_weight="1" >
			
			        <ImageButton
			            android:id="@+id/btnBwdLeft"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_bwdleft"
			        	android:scaleType="centerInside" />
			
			        <ImageButton
			            android:id="@+id/btnBwd"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_bwd"
			        	android:scaleType="centerInside" />
			
			        <ImageButton
			            android:id="@+id/btnBwdRight"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="5dp"
			            android:src="@drawable/arrow_bwdright"
			        	android:scaleType="centerInside" />
			    </TableRow>
					
			</TableLayout>
			    
		    <View
		        android:layout_width ="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" />
	        
	    </LinearLayout>
	
	    <include 
	        layout="@layout/joystick_remote"
	        android:visibility="invisible"
	        />
	    
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip" />
    
</LinearLayout>